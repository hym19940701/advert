.clear-float:after
    content: ''
    clear: both
.content
    max-width:1300px
    min-width: 1000px
    margin: 0 auto
    padding: 0 20px
.btn
    background-color: $deepOrange
    color: $withBgText
    cursor: pointer
    border: 1px solid $deepOrange
    transition: all .3s
    &:hover
        background-color: $lightOrange
        border: 1px solid $lightOrange
.underline
    &:after
            content: ''
            display: block
            height 2px
            width 100px
            background-color: $deepOrange
            margin: 30px auto 0 auto